extends base

block content
    .container 
        .content-section
            .content-section-top 
                h3 All Categories
            .content-section-bottom
                .content-section-left 
                    ul.list-container 
                        li.active.Categories#allAdventures 
                            p All Adventures 
                            <i class="flaticon-browsing sidebar-icon"></i>
                        li#Restaurants.Categories      
                            p Restaurants
                            <i class="flaticon-recipe-book sidebar-icon"></i>  
                        li#homedecor.Categories  
                            p Home/Decor
                            <i class="flaticon-relax sidebar-icon"></i>        
                        li#daytrips.Categories      
                            p Activies/places
                            <i class="flaticon-car sidebar-icon"></i>    
                        li#cooking.Categories      
                            p Recipe Ideas!
                            <i class="flaticon-fork sidebar-icon"></i>   
                        li#hiking.Categories      
                            p Hikes!
                            <i class="flaticon-hiking sidebar-icon"></i>  
                    h3#recently-added-title Recently Added
                    .recentlyAddedContainer#recentlyAddedContainer


                .content-section-right
                    .top-right-section 
                        .image-section
                            img(src="img/assets/sushi.jpg" class="right-section-image")
                        .image-section
                            img(src="img/assets/minigolf.jpg" class="right-section-image")   
                        .image-section
                            img(src="img/assets/cooking.jpg" class="right-section-image")                   
                    .bottom-right-section
                        .bottom-title 
                            h3 Use The LEFT And RIGHT Keys To Swipe Too!
                       
                        include util/loading 
                        //loading bar
                        .bottom-content#bottom-content
                            #swipeFeedBackMessageContainerRight
                                h3 Yeah!

                            #swipeFeedBackMessageContainerLeft
                                h3 Nope!
                            #swipeFeedBackMessageContainerCenter
                                h3 Redo!
                            .button-container 
                                <i class="flaticon-redo-arrow-symbol action-buttons" id="redo-button"></i> 
                                <i class="flaticon-cross-sign action-buttons" id="next-button"></i> 
                                <i class="flaticon-add action-buttons" id="add-button"></i> 
                                #info-button-container
                                    <i class="flaticon-information action-buttons" id="info-button"></i> 
                        

                
